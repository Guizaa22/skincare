<%- include('../partials/header') %>

<div class="admin-container">
    <div class="admin-header">
        <h1>Admin Dashboard</h1>
        <p>Manage your SkinSense business</p>
    </div>

    <div class="admin-grid">
        <!-- Overview Stats -->
        <div class="admin-card stats-overview">
            <h3><i class="fas fa-chart-bar"></i> Overview</h3>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number"><%= typeof totalUsers !== 'undefined' ? totalUsers : '0' %></div>
                    <div class="stat-label">Total Users</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= typeof totalBookings !== 'undefined' ? totalBookings : '0' %></div>
                    <div class="stat-label">Total Bookings</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= typeof todayBookings !== 'undefined' ? todayBookings : '0' %></div>
                    <div class="stat-label">Today's Bookings</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">$<%= typeof revenue !== 'undefined' ? revenue : '0' %></div>
                    <div class="stat-label">Monthly Revenue</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="admin-card quick-actions">
            <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
            <div class="action-buttons">
                <a href="/admin/bookings" class="btn btn-primary">
                    <i class="fas fa-calendar-alt"></i>
                    Manage Bookings
                </a>
                <a href="/admin/users" class="btn btn-outline">
                    <i class="fas fa-users"></i>
                    Manage Users
                </a>
                <a href="/admin/services" class="btn btn-outline">
                    <i class="fas fa-spa"></i>
                    Manage Services
                </a>
                <a href="/admin/settings" class="btn btn-outline">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
            </div>
        </div>

        <!-- Recent Bookings -->
        <div class="admin-card recent-bookings">
            <h3><i class="fas fa-clock"></i> Recent Bookings</h3>
            <% if (typeof recentBookings !== 'undefined' && recentBookings && recentBookings.length > 0) { %>
                <div class="booking-list">
                    <% recentBookings.slice(0, 5).forEach(booking => { %>
                    <div class="booking-item">
                        <div class="booking-info">
                            <h4><%= booking.user.firstName %> <%= booking.user.lastName %></h4>
                            <p><i class="fas fa-spa"></i> <%= booking.service.name %></p>
                            <p><i class="fas fa-calendar"></i> <%= new Date(booking.date).toLocaleDateString() %> at <%= booking.time %></p>
                        </div>
                        <div class="booking-actions">
                            <span class="status <%= booking.status %>"><%= booking.status %></span>
                            <div class="action-buttons-small">
                                <% if (booking.status === 'pending') { %>
                                    <button class="btn-small btn-success" onclick="updateBookingStatus('<%= booking._id %>', 'confirmed')">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button class="btn-small btn-danger" onclick="updateBookingStatus('<%= booking._id %>', 'cancelled')">
                                        <i class="fas fa-times"></i>
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <a href="/admin/bookings" class="view-all-link">View All Bookings</a>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-calendar-times"></i>
                    <p>No recent bookings</p>
                </div>
            <% } %>
        </div>

        <!-- System Status -->
        <div class="admin-card system-status">
            <h3><i class="fas fa-server"></i> System Status</h3>
            <div class="status-items">
                <div class="status-item">
                    <div class="status-indicator online"></div>
                    <div class="status-info">
                        <div class="status-name">Database</div>
                        <div class="status-desc">Connected</div>
                    </div>
                </div>
                <div class="status-item">
                    <div class="status-indicator <%= typeof emailService !== 'undefined' && emailService ? 'online' : 'offline' %>"></div>
                    <div class="status-info">
                        <div class="status-name">Email Service</div>
                        <div class="status-desc"><%= typeof emailService !== 'undefined' && emailService ? 'Active' : 'Not Configured' %></div>
                    </div>
                </div>
                <div class="status-item">
                    <div class="status-indicator <%= typeof smsService !== 'undefined' && smsService ? 'online' : 'offline' %>"></div>
                    <div class="status-info">
                        <div class="status-name">SMS Service</div>
                        <div class="status-desc"><%= typeof smsService !== 'undefined' && smsService ? 'Active' : 'Not Configured' %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.admin-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.admin-header {
    text-align: center;
    margin-bottom: 3rem;
}

.admin-header h1 {
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.admin-header p {
    color: #666;
    font-size: 1.1rem;
}

.admin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.admin-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border: 1px solid #e2e8f0;
}

.admin-card h3 {
    color: #333;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.admin-card h3 i {
    color: #667eea;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.stat-item {
    text-align: center;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 0.25rem;
}

.stat-label {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
}

.action-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.btn {
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s;
    text-decoration: none;
    justify-content: center;
}

.btn-primary {
    background: #667eea;
    color: white;
}

.btn-primary:hover {
    background: #5a67d8;
    transform: translateY(-1px);
}

.btn-outline {
    background: transparent;
    color: #667eea;
    border: 2px solid #667eea;
}

.btn-outline:hover {
    background: #667eea;
    color: white;
}

.booking-list {
    margin-bottom: 1rem;
}

.booking-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    margin-bottom: 0.5rem;
}

.booking-info h4 {
    margin: 0 0 0.5rem 0;
    color: #333;
}

.booking-info p {
    margin: 0.25rem 0;
    color: #666;
    font-size: 0.9rem;
}

.booking-info i {
    margin-right: 0.25rem;
    color: #999;
}

.booking-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
}

.action-buttons-small {
    display: flex;
    gap: 0.25rem;
}

.btn-small {
    padding: 0.25rem 0.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.8rem;
}

.btn-success {
    background: #28a745;
    color: white;
}

.btn-danger {
    background: #dc3545;
    color: white;
}

.status {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: capitalize;
}

.status.pending {
    background: #fef3cd;
    color: #b08800;
}

.status.confirmed {
    background: #d1ecf1;
    color: #0c5460;
}

.status.completed {
    background: #d4edda;
    color: #155724;
}

.status.cancelled {
    background: #f8d7da;
    color: #721c24;
}

.view-all-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
}

.view-all-link:hover {
    text-decoration: underline;
}

.empty-state {
    text-align: center;
    padding: 2rem 0;
}

.empty-state i {
    font-size: 3rem;
    color: #ccc;
    margin-bottom: 1rem;
}

.empty-state p {
    color: #666;
    margin-bottom: 1rem;
}

.status-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.status-item {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
}

.status-indicator.online {
    background: #28a745;
}

.status-indicator.offline {
    background: #dc3545;
}

.status-name {
    font-weight: 500;
    color: #333;
}

.status-desc {
    font-size: 0.9rem;
    color: #666;
}

@media (max-width: 768px) {
    .admin-container {
        padding: 1rem;
    }
    
    .admin-grid {
        grid-template-columns: 1fr;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .booking-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .booking-actions {
        align-items: flex-start;
    }
}
</style>

<script>
function updateBookingStatus(bookingId, status) {
    if (confirm(`Are you sure you want to ${status} this booking?`)) {
        fetch(`/api/bookings/${bookingId}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to update booking status');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to update booking status');
        });
    }
}
</script>

<%- include('../partials/footer') %>
