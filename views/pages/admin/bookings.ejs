<script>
// Load bookings data
document.addEventListener('DOMContentLoaded', function() {
    loadBookings();
    loadServices();
});

async function loadBookings() {
    try {
        const response = await fetch('/api/bookings?limit=1000'); // Get all bookings for admin
        const data = await response.json();
        
        if (data.success) {
            const bookings = data.data.bookings || data.data || [];
            displayBookings(bookings);
        } else {
            showNotification('Failed to load bookings', 'error');
        }
    } catch (error) {
        console.error('Error loading bookings:', error);
        showNotification('Failed to load bookings', 'error');
    }
}

function displayBookings(bookings) {
    const tbody = document.getElementById('bookingsTableBody');
    tbody.innerHTML = '';
    
    if (!bookings || bookings.length === 0) {
        tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4">No bookings found.</td></tr>';
        return;
    }
    
    bookings.forEach(booking => {
        const row = document.createElement('tr');
        const bookingId = booking._id || booking.id;
        const clientName = booking.user ? booking.user.name : (booking.clientName || 'Unknown');
        const clientEmail = booking.user ? booking.user.email : (booking.email || '');
        const serviceName = booking.service ? booking.service.name : (booking.serviceName || 'Unknown Service');
        const serviceDuration = booking.service ? booking.service.duration : booking.duration || 60;
        const appointmentDate = new Date(booking.appointmentDate);
        const appointmentTime = booking.appointmentTime || '';
        const totalPrice = booking.totalPrice || booking.price || 0;
        
        row.innerHTML = `
            <td>
                <input type="checkbox" class="booking-checkbox" value="${bookingId}" onchange="updateBulkActions()">
            </td>
            <td>
                <div class="booking-client">
                    <div class="client-avatar">
                        ${clientName.charAt(0).toUpperCase()}
                    </div>
                    <div class="client-info">
                        <h6>${clientName}</h6>
                        <p>${clientEmail}</p>
                    </div>
                </div>
            </td>
            <td>
                <div>
                    <div class="fw-bold">${serviceName}</div>
                    <small class="text-muted">${serviceDuration} min</small>
                </div>
            </td>
            <td>
                <div class="booking-datetime">
                    <div class="booking-date">${formatDate(appointmentDate)}</div>
                    <div class="booking-time">${appointmentTime}</div>
                </div>
            </td>
            <td>${serviceDuration} min</td>
            <td>
                <span class="booking-status status-${booking.status}">
                    ${booking.status}
                </span>
            </td>
            <td class="booking-total">$${totalPrice}</td>
            <td>
                <div class="booking-actions">
                    <button class="btn-action btn-view" onclick="viewBooking('${bookingId}')" title="View">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-action btn-edit" onclick="editBooking('${bookingId}')" title="Edit">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn-action btn-delete" onclick="deleteBooking('${bookingId}')" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </td>
        `;
        tbody.appendChild(row);
    });
}

async function loadServices() {
    try {
        const response = await fetch('/api/services?limit=1000');
        const data = await response.json();
        
        if (data.success) {
            const services = data.data.services || data.data || [];
            const select = document.getElementById('serviceFilter');
            services.forEach(service => {
                const option = document.createElement('option');
                option.value = service._id || service.id;
                option.textContent = service.name;
                select.appendChild(option);
            });
        }
    } catch (error) {
        console.error('Error loading services:', error);
    }
}

function formatDate(dateString) {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
        weekday: 'short',
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
}

function toggleSelectAll() {
    const selectAll = document.getElementById('selectAll');
    const checkboxes = document.querySelectorAll('.booking-checkbox');
    
    checkboxes.forEach(checkbox => {
        checkbox.checked = selectAll.checked;
    });
    
    updateBulkActions();
}

function updateBulkActions() {
    const checkboxes = document.querySelectorAll('.booking-checkbox:checked');
    const bulkActions = document.getElementById('bulkActions');
    const selectedCount = document.querySelector('.selected-count');
    
    if (checkboxes.length > 0) {
        bulkActions.style.display = 'block';
        selectedCount.textContent = `${checkboxes.length} booking${checkboxes.length > 1 ? 's' : ''} selected`;
    } else {
        bulkActions.style.display = 'none';
    }
}

function toggleView(view) {
    const tableView = document.getElementById('tableView');
    const calendarView = document.getElementById('calendarView');
    const buttons = document.querySelectorAll('.view-toggle .btn');
    
    buttons.forEach(btn => btn.classList.remove('active'));
    
    if (view === 'table') {
        tableView.style.display = 'block';
        calendarView.style.display = 'none';
        buttons[0].classList.add('active');
    } else {
        tableView.style.display = 'none';
        calendarView.style.display = 'block';
        buttons[1].classList.add('active');
        generateCalendar();
    }
}

function generateCalendar() {
    // Simple calendar generation - you can enhance this
    const calendarGrid = document.getElementById('calendarGrid');
    const currentDate = new Date();
    const month = currentDate.getMonth();
    const year = currentDate.getFullYear();
    
    const monthNames = [
        'January', 'February', 'March', 'April', 'May', 'June',
        'July', 'August', 'September', 'October', 'November', 'December'
    ];
    
    document.getElementById('calendarMonth').textContent = `${monthNames[month]} ${year}`;
    
    // Generate calendar days (simplified)
    calendarGrid.innerHTML = '';
    const daysInMonth = new Date(year, month + 1, 0).getDate();
    
    for (let day = 1; day <= daysInMonth; day++) {
        const dayElement = document.createElement('div');
        dayElement.className = 'calendar-day';
        dayElement.innerHTML = `
            <div class="calendar-day-number">${day}</div>
            ${day % 3 === 0 ? '<div class="calendar-booking">10:00 AM - Facial</div>' : ''}
            ${day % 5 === 0 ? '<div class="calendar-booking">2:00 PM - Acne Treatment</div>' : ''}
        `;
        calendarGrid.appendChild(dayElement);
    }
}

function previousMonth() {
    // Implement previous month navigation
    showNotification('Previous month functionality coming soon', 'info');
}

function nextMonth() {
    // Implement next month navigation
    showNotification('Next month functionality coming soon', 'info');
}

function applyFilters() {
    // Implement filter functionality
    showNotification('Filter functionality coming soon', 'info');
}

function exportBookings() {
    // Implement export functionality
    showNotification('Export functionality coming soon', 'info');
}

function viewBooking(id) {
    // Implement view booking functionality
    showNotification(`View booking ${id} functionality coming soon`, 'info');
}

function editBooking(id) {
    // Implement edit booking functionality
    showNotification(`Edit booking ${id} functionality coming soon`, 'info');
}

function deleteBooking(id) {
    if (confirm('Are you sure you want to delete this booking?')) {
        // Implement delete functionality
        showNotification(`Delete booking ${id} functionality coming soon`, 'info');
    }
}

function bulkConfirm() {
    const selected = document.querySelectorAll('.booking-checkbox:checked');
    showNotification(`Confirm ${selected.length} bookings functionality coming soon`, 'info');
}

function bulkReschedule() {
    const selected = document.querySelectorAll('.booking-checkbox:checked');
    showNotification(`Reschedule ${selected.length} bookings functionality coming soon`, 'info');
}

function bulkCancel() {
    const selected = document.querySelectorAll('.booking-checkbox:checked');
    if (confirm(`Are you sure you want to cancel ${selected.length} bookings?`)) {
        showNotification(`Cancel ${selected.length} bookings functionality coming soon`, 'info');
    }
}

// Notification function
function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <div class="notification-content">
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
            <span>${message}</span>
        </div>
    `;
    
    notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        background: ${type === 'success' ? '#10b981' : type === 'error' ? '#ef4444' : '#3b82f6'};
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        z-index: 9999;
        transform: translateX(100%);
        transition: transform 0.3s ease;
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(0)';
    }, 100);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}
</script>

