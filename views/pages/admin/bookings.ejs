<%- include('../../partials/admin-header', {title: 'Manage Bookings - SkinSense', description: 'Admin panel for managing appointments and bookings.'}) %>

<%- include('../../partials/admin-nav', {currentPage: 'bookings'}) %>

<!-- Admin Bookings Management -->
<div class="admin-container with-nav">
    <div class="admin-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-calendar-alt me-3"></i>Manage Bookings</h1>
                <p class="text-muted">View, manage, and schedule appointments for your clients</p>
            </div>
            <div class="admin-actions">
                <a href="/admin/bookings/new" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>New Booking
                </a>
                <button class="btn btn-outline-primary" onclick="exportBookings()">
                    <i class="fas fa-download me-2"></i>Export
                </button>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="filters-section">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="filter-group">
                    <label class="filter-label">Search</label>
                    <div class="search-box">
                        <input type="text" id="bookingSearch" placeholder="Search bookings..." class="form-control">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="filter-group">
                    <label class="filter-label">Status</label>
                    <select id="statusFilter" class="form-select">
                        <option value="">All Status</option>
                        <option value="pending">Pending</option>
                        <option value="confirmed">Confirmed</option>
                        <option value="completed">Completed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="filter-group">
                    <label class="filter-label">Service</label>
                    <select id="serviceFilter" class="form-select">
                        <option value="">All Services</option>
                        <!-- Services will be loaded here -->
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="filter-group">
                    <label class="filter-label">Date From</label>
                    <input type="date" id="dateFrom" class="form-control">
                </div>
            </div>
            <div class="col-md-2">
                <div class="filter-group">
                    <label class="filter-label">Date To</label>
                    <input type="date" id="dateTo" class="form-control">
                </div>
            </div>
            <div class="col-md-1">
                <div class="filter-group">
                    <label class="filter-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" onclick="applyFilters()">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="bookings-section">
        <div class="admin-card">
            <div class="card-header">
                <h3><i class="fas fa-list me-2"></i>All Bookings</h3>
                <div class="card-actions">
                    <div class="view-toggle">
                        <button class="btn btn-sm btn-outline-primary active" onclick="toggleView('table')">
                            <i class="fas fa-table"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-primary" onclick="toggleView('calendar')">
                            <i class="fas fa-calendar"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Table View -->
                <div id="tableView" class="view-content">
                    <div class="bookings-table-container">
                        <table class="table bookings-table">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                                    </th>
                                    <th>Client</th>
                                    <th>Service</th>
                                    <th>Date & Time</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="bookingsTableBody">
                                <!-- Bookings will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Calendar View -->
                <div id="calendarView" class="view-content" style="display: none;">
                    <div class="calendar-container">
                        <div class="calendar-header">
                            <button class="btn btn-outline-primary" onclick="previousMonth()">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <h4 id="calendarMonth">January 2024</h4>
                            <button class="btn btn-outline-primary" onclick="nextMonth()">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                        <div class="calendar-grid" id="calendarGrid">
                            <!-- Calendar will be generated here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bulk Actions -->
    <div class="bulk-actions" id="bulkActions" style="display: none;">
        <div class="bulk-actions-content">
            <span class="selected-count">0 bookings selected</span>
            <div class="bulk-buttons">
                <button class="btn btn-success btn-sm" onclick="bulkConfirm()">
                    <i class="fas fa-check me-1"></i>Confirm
                </button>
                <button class="btn btn-warning btn-sm" onclick="bulkReschedule()">
                    <i class="fas fa-clock me-1"></i>Reschedule
                </button>
                <button class="btn btn-danger btn-sm" onclick="bulkCancel()">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
            </div>
        </div>
    </div>
</div>

