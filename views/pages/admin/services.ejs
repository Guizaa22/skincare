<%- include('../../partials/admin-header', {title: 'Manage Services - SkinSense', description: 'Admin panel for managing skincare services and treatments.'}) %>

<%- include('../../partials/admin-nav', {currentPage: 'services'}) %>

<!-- Admin Services Management -->
<div class="admin-container with-nav">
    <div class="admin-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-spa me-3"></i>Manage Services</h1>
                <p class="text-muted">Add, edit, and manage your skincare services and treatments</p>
            </div>
            <div class="admin-actions">
                <a href="/admin/services/new" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Add New Service
                </a>
                <a href="/services" class="btn btn-outline-primary">
                    <i class="fas fa-eye me-2"></i>View Public Page
                </a>
            </div>
        </div>
    </div>

    <!-- Services Management Grid -->
    <div class="admin-grid">
        <!-- Services List -->
        <div class="admin-card services-list">
            <div class="card-header">
                <h3><i class="fas fa-list me-2"></i>All Services</h3>
                <div class="card-actions">
                    <div class="search-box">
                        <input type="text" id="serviceSearch" placeholder="Search services..." class="form-control">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="services-table-container">
                    <table class="table services-table">
                        <thead>
                            <tr>
                                <th>Service</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="servicesTableBody">
                            <!-- Services will be loaded here via JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Service Statistics -->
        <div class="admin-card service-stats">
            <h3><i class="fas fa-chart-bar me-2"></i>Service Statistics</h3>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-spa"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" id="totalServices">0</div>
                        <div class="stat-label">Total Services</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" id="featuredServices">0</div>
                        <div class="stat-label">Featured</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-fire"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" id="popularServices">0</div>
                        <div class="stat-label">Popular</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-number" id="avgPrice">$0</div>
                        <div class="stat-label">Avg Price</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="admin-card quick-actions">
            <h3><i class="fas fa-bolt me-2"></i>Quick Actions</h3>
            <div class="action-buttons">
                <button class="btn-action" onclick="bulkUpdateStatus('active')">
                    <i class="fas fa-check-circle"></i>
                    <span>Activate All</span>
                </button>
                <button class="btn-action" onclick="bulkUpdateStatus('inactive')">
                    <i class="fas fa-pause-circle"></i>
                    <span>Deactivate All</span>
                </button>
                <button class="btn-action" onclick="exportServices()">
                    <i class="fas fa-download"></i>
                    <span>Export Data</span>
                </button>
                <button class="btn-action" onclick="importServices()">
                    <i class="fas fa-upload"></i>
                    <span>Import Data</span>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
