    .admin-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .admin-container {
        padding: 1rem;
    }
    
    .admin-header .d-flex {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .admin-actions {
        justify-content: center;
    }
    
    .search-box {
        width: 100%;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .action-buttons {
        grid-template-columns: 1fr;
    }
}
</style>

<script>
// Load services data
document.addEventListener('DOMContentLoaded', function() {
    loadServices();
});

async function loadServices() {
    try {
        const response = await fetch('/api/services');
        const data = await response.json();
        
        if (data.success) {
            displayServices(data.data);
            updateStatistics(data.data);
        } else {
            showNotification('Failed to load services', 'error');
        }
    } catch (error) {
        console.error('Error loading services:', error);
        showNotification('Failed to load services', 'error');
    }
}

function displayServices(services) {
    const tbody = document.getElementById('servicesTableBody');
    tbody.innerHTML = '';
    
    services.forEach(service => {
        const row = document.createElement('tr');
        row.innerHTML = 
            '<td>' +
                '<div class="service-info">' +
                    '<div class="service-icon">' +
                        '<i class="fas fa-spa"></i>' +
                    '</div>' +
                    '<div class="service-details">' +
                        '<h6>' + service.name + '</h6>' +
                        '<p>' + (service.shortDescription || 'No description') + '</p>' +
                    '</div>' +
                '</div>' +
            '</td>' +
            '<td>' +
                '<span class="badge bg-light text-dark">' + (service.category || 'General') + '</span>' +
            '</td>' +
            '<td>' +
                '<strong class="text-primary">$' + service.price + '</strong>' +
            '</td>' +
            '<td>' + (service.duration || 60) + ' min</td>' +
            '<td>' +
                '<span class="status-badge ' + (service.isActive ? 'status-active' : 'status-inactive') + '">' +
                    (service.isActive ? 'Active' : 'Inactive') +
                '</span>' +
            '</td>' +
            '<td>' +
                '<div class="action-buttons-table">' +
                    '<button class="btn-table btn-view" onclick="viewService(\'' + service._id + '\')" title="View">' +
                        '<i class="fas fa-eye"></i>' +
                    '</button>' +
                    '<button class="btn-table btn-edit" onclick="editService(\'' + service._id + '\')" title="Edit">' +
                        '<i class="fas fa-edit"></i>' +
                    '</button>' +
                    '<button class="btn-table btn-delete" onclick="deleteService(\'' + service._id + '\')" title="Delete">' +
                        '<i class="fas fa-trash"></i>' +
                    '</button>' +
                '</div>' +
            '</td>';
        tbody.appendChild(row);
    });
}

function updateStatistics(services) {
    const totalServices = services.length;
    const featuredServices = services.filter(s => s.isFeatured).length;
    const popularServices = services.filter(s => s.isPopular).length;
    const avgPrice = services.length > 0 ? 
        Math.round(services.reduce((sum, s) => sum + s.price, 0) / services.length) : 0;
    
    document.getElementById('totalServices').textContent = totalServices;
    document.getElementById('featuredServices').textContent = featuredServices;
    document.getElementById('popularServices').textContent = popularServices;
    document.getElementById('avgPrice').textContent = '$' + avgPrice;
}

function viewService(serviceId) {
    window.open('/services/' + serviceId, '_blank');
}

function editService(serviceId) {
    window.location.href = '/admin/services/' + serviceId + '/edit';
}

function deleteService(serviceId) {
    if (confirm('Are you sure you want to delete this service? This action cannot be undone.')) {
        fetch('/api/services/' + serviceId, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification('Service deleted successfully!', 'success');
                loadServices(); // Reload the services
            } else {
                showNotification('Failed to delete service: ' + (data.message || 'Unknown error'), 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Failed to delete service. Please try again.', 'error');
        });
    }
}

function bulkUpdateStatus(status) {
    if (confirm('Are you sure you want to ' + (status === 'active' ? 'activate' : 'deactivate') + ' all services?')) {
        // Implementation for bulk update
        showNotification('Bulk ' + status + ' update not implemented yet', 'info');
    }
}

function exportServices() {
    showNotification('Export functionality not implemented yet', 'info');
}

function importServices() {
    showNotification('Import functionality not implemented yet', 'info');
}

// Search functionality
document.getElementById('serviceSearch').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const rows = document.querySelectorAll('#servicesTableBody tr');
    
    rows.forEach(row => {
        const serviceName = row.querySelector('h6').textContent.toLowerCase();
        const serviceDesc = row.querySelector('p').textContent.toLowerCase();
        
        if (serviceName.includes(searchTerm) || serviceDesc.includes(searchTerm)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

// Notification function
function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = 'notification notification-' + type;
    notification.innerHTML = 
        '<div class="notification-content">' +
            '<i class="fas fa-' + (type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle') + '"></i>' +
            '<span>' + message + '</span>' +
        '</div>';
    
    notification.style.cssText = 
        'position: fixed;' +
        'top: 20px;' +
        'right: 20px;' +
        'background: ' + (type === 'success' ? '#10b981' : type === 'error' ? '#ef4444' : '#3b82f6') + ';' +
        'color: white;' +
        'padding: 1rem 1.5rem;' +
        'border-radius: 10px;' +
        'box-shadow: 0 10px 30px rgba(0,0,0,0.2);' +
        'z-index: 9999;' +
        'transform: translateX(100%);' +
        'transition: transform 0.3s ease;';
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(0)';
    }, 100);
    
    setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 3000);
}
</script>

</body>
</html>
